extends ../wrapper

block seo
	title.
		Upload

block content
	h3.
		Upload Photo

	#pages-upload
		- var endpoint = "/api/MyUsers/me/upload/photo"
		- var photo = getUploadForProperty('photo',user.uploads())
		.profile-photo-viewport.text-center(data-jsclass="digitopiaViewport" data-crop="true" data-blowup="true")
			img(data-jsclass="digitopiaLazyImg" data-lazy-src= photo)
			.dropzone(data-jsclass="dropzoneController" data-endpoint= endpoint data-current-file= photo data-width="300" data-height="300")
				.dz-message.
					Drop your photo here<br><small>(or click to upload)</small>
