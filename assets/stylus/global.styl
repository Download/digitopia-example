@import 'nib'

body
	background-color:#eee

.is-logged-in
	.hidden-logged-in
		display:none!important

.is-logged-out
	.hidden-logged-out
		display:none!important

#scope-pages-upload

	.profile-photo-viewport
		position:relative
		height:300px
		img
			transition: all 0.5s ease;
		.dropzone
			position:absolute
			top:0px!important
			width:100%
			height:300px
			opacity: 0
			transition: all 0.5s ease;
			paddding-top:40%
		.dropzone:hover
			opacity: 0.8
		.loading
			opacity: 1

#ajax-status
	position:fixed
	right:0px
	bottom:0px


.ogPreview
	height:250px
	max-width:350px
	cursor:pointer
	border-radius:6px
	border:6px solid #95c200
	background-color: #666
	margin-bottom:30px
	&:hover
		border-color: #B3E801
	.play
		text-align:center
		color:white
		font-size:60px
		width:100%
		margin-top:20px
		opacity:.4
		&:hover
			opacity:.8
	.caption
		color: white
		background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.9) 100%)
		padding:10px
		padding-top:20px
		position:absolute
		bottom:0px!important
		left:0px!important
		top:auto!important
		width:100%
		font-size:12px
		a
			color: white
		h3
			font-size:16px
			margin:0px
		h4
			font-size:12px
			display:none
