@import 'nib'

body
	background-color:#eee

#pages-upload

	.profile-photo-viewport
		position:relative
		width:300px
		height:300px
		img
			transition: all 0.5s ease;
		.dropzone
			position:absolute
			top:0px
			width:300px
			height:300px
			opacity: 0
			transition: all 0.5s ease;
		.dropzone:hover
			opacity: 0.8
		.loading
			opacity: 1
